{
  "compilerOptions": {
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationDir": "./__artifacts/release",
    "outDir": "./__artifacts/release",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noEmitOnError": false,
    "removeComments": true,
    "target": "es2015",
    "inlineSourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "none",
    "stripInternal": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "lib": ["es2015", "dom"],
    "types": [ "node", "systemjs" ],
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}
