{
  "compilerOptions": {
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noEmitOnError": false,
    "removeComments": true,
    "target": "es2015",
    "inlineSourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "es2015",
    "outDir": "../../../__artifacts/release",
    "declaration": true,
    "stripInternal": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "lib": ["es2017", "dom.iterable"],
    "typeRoots": [ "../../../node_modules/@types" ],
    "types": [ "node" ],
    "skipLibCheck": true // One issue in angular typing since TS 2.0 requires this for now.,
  },
  "compileOnSave": true,
  "include": ["./*.ts"]
}
