{
  "version": "1.0.0-beta.0",
  "name": "@sharpangles/bootstrap",
  "description": "Global build bootstraps",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sharpangles/platform.git"
  },
  "keywords": [
    "Angular",
    "Enterprise",
    "Bootstrap"
  ],
  "author": "Eric Nilsen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sharpangles/platform/issues"
  },
  "homepage": "https://github.com/sharpangles/platform/tree/master/modules/bootstrap#readme",
  "scripts": {
    "build:ep:systemjs": "tsc -t es2015 -lib es2015,dom -d --inlineSourceMap --outFile \"./__artifacts/release/bundles/entrypoints/systemjsBrowserEntryPoint.js\" \"./src/platforms/browser/systemjs/systemjs_browser_entry_point.ts\"",
    "build:ep:ngsystemjs": "tsc -t es2015 -lib es2015,dom -d --inlineSourceMap --outFile \"./__artifacts/release/bundles/entrypoints/systemjsAngularBrowserEntryPoint.js\" \"./src/platforms/browser/systemjs/systemjs_angular_browser_entry_point.ts\"",
    "build:ep:karma": "tsc -t es2015 -lib es2015,dom -d --inlineSourceMap --outFile \"./__artifacts/release/bundles/entrypoints/karmaEntryPoint.js\" \"./src/platforms/browser/karma/karma_entry_point.ts\"",
    "build:ep:ngkarma": "tsc -t es2015 -lib es2015,dom -d --inlineSourceMap --outFile \"./__artifacts/release/bundles/entrypoints/karmaAngularEntryPoint.js\" \"./src/platforms/browser/karma/karma_angular_entry_point.ts\"",
    "build:ep:node": "tsc -t es2015 -lib es2015,dom -d --inlineSourceMap --outFile \"./__artifacts/release/bundles/entrypoints/nodeEntryPoint.js\" \"./src/platforms/server/node_entry_point.ts\"",
    "build:ep:ngnode": "tsc -t es2015 -lib es2015,dom -d --inlineSourceMap --outFile \"./__artifacts/release/bundles/entrypoints/nodeAngularEntryPoint.js\" \"./src/platforms/server/node_angular_entry_point.ts\"",
    "build:dist": "tsc -p tsconfig.dist.json",
    "build": "npm run build:dist && npm run build:ep:systemjs && npm run build:ep:ngsystemjs && npm run build:ep:karma && npm run build:ep:ngkarma && npm run build:ep:node && npm run build:ep:ngnode",
    "minify:ep:systemjs": "closure-compiler --compilation_level ADVANCED_OPTIMIZATIONS --create_source_map ./__artifacts/release/bundles/entrypoints/systemjsBrowserEntryPoint.min.js.map --js node_modules/google-closure-library/closure/goog/base.js --js ./__artifacts/release/bundles/entrypoints/systemjsBrowserEntryPoint.js --js node_modules/systemjs/dist/system.src.js --language_out ES5 > ./__artifacts/release/bundles/entrypoints/systemjsBrowserEntryPoint.min.js",
    "copy": "cpy package.json README.md __artifacts/release",
    "postbuild": "npm run copy",
    "test": "node ../../tests-typescript.js",
    "clean": "rimraf -rf \"__artifacts\"",
    "watch": "tsc -w"
  },
  "peerDependencies": {
    "tsconfig-paths": "^2.1.2"
  },
  "devDependencies": {
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-jasmine": "^1.0.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "cpy-cli": "^1.0.1",
    "jasmine": "^2.5.3",
    "nyc": "^10.1.2",
    "rimraf": "^2.5.4",
    "concurrently": "^3.4.0",
    "closure-compiler-cli": "1.0.2",
    "google-closure-compiler": "20170409.0.0",
    "google-closure-library": "^20170409.0.0"
  }
}
