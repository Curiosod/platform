{
  "version": "1.0.0-beta.0",
  "name": "@sharpangles/bootstrap",
  "description": "Global build bootstraps",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sharpangles/platform.git"
  },
  "keywords": [
    "Angular",
    "Enterprise",
    "Bootstrap"
  ],
  "author": "Eric Nilsen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sharpangles/platform/issues"
  },
  "homepage": "https://github.com/sharpangles/platform/tree/master/modules/bootstrap#readme",
  "scripts": {
    "build:ep:systemjs": "tsc -t es5 -lib es2015,dom --outFile \"./__artifacts/release/entrypoints/systemjsBrowserEntryPoint.js\" \"./src/platforms/browser/systemjs/systemjs_browser_entry_point.ts\"",
    "build:ep:karma": "tsc -t es5 -lib es2015,dom --outFile \"./__artifacts/release/entrypoints/karmaEntryPoint.js\" \"./src/platforms/browser/karma/karma_entry_point.ts\"",
    "build:ep:ngkarma": "tsc -t es5 -lib es2015,dom --outFile \"./__artifacts/release/entrypoints/karmaAngularEntryPoint.js\" \"./src/platforms/browser/karma/karma_angular_entry_point.ts\"",
    "build:ep:node": "tsc -t es5 -lib es2015,dom --outFile \"./__artifacts/release/entrypoints/nodeEntryPoint.js\" \"./src/platforms/server/node_entry_point.ts\"",
    "build:ep:ngnode": "tsc -t es5 -lib es2015,dom --outFile \"./__artifacts/release/entrypoints/nodeAngularEntryPoint.js\" \"./src/platforms/server/node_angular_entry_point.ts\"",
    "build": "npm run build:ep:systemjs && npm run build:ep:karma && npm run build:ep:ngkarma && npm run build:ep:node && npm run build:ep:ngnode",
    "copy": "cpy package.json README.md __artifacts/release",
    "postbuild": "npm run copy",
    "test": "node ../../tests-typescript.js",
    "clean": "rimraf -rf \"__artifacts\"",
    "watch": "tsc -w"
  },
  "peerDependencies": {
    "tsconfig-paths": "^2.1.2"
  },
  "devDependencies": {
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-jasmine": "^1.0.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "cpy-cli": "^1.0.1",
    "jasmine": "^2.5.3",
    "nyc": "^10.1.2",
    "rimraf": "^2.5.4",
    "rollup": "^0.41.4",
    "uglifyjs": "^2.4.10",
    "concurrently": "^3.4.0",
    "node-sass": "^4.5.2",
    "systemjs": "0.19.40"
  }
}
