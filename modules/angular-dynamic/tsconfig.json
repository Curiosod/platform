{
  "compilerOptions": {
    "baseUrl": ".",
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noEmitOnError": false,
    "lib": ["es2015", "dom"],
    "target": "es5",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "declaration": true,
    "module": "commonjs",
    "outDir": "./release",
    "rootDir": ".",
    "types": [
      "node",
      "jasmine"
    ]
  },
  "exclude": [
	  "node_modules",
    "release"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": false
  }
}
