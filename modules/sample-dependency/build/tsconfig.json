    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noEmitOnError": false,
    "lib": ["es2015", "dom"],
    "noEmit": true,
    "target": "es5",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "paths": {
