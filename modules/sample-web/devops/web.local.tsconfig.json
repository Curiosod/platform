{
  "compilerOptions": {
    "baseUrl": ".",
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "noEmitOnError": false,
    "outDir": "../__artifacts/local/app",
    "lib": ["es2015", "dom"],
    "target": "es2015",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "types": [
      "node",
      "jasmine"
    ]
  },
  "include": [
    "../index.ts",
    "../src/**/*.ts",
    "../spec/**/*.ts"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true
  }
}
