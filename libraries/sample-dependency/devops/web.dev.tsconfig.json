{
  "compilerOptions": {
    "baseUrl": ".",
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "outDir": "../__artifacts/build/app",
    "lib": ["es2015", "dom"],
    "target": "es5",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "importHelpers": true,
    "paths": {
      "@sharpangles/platform-global": ["../../platform-global/__artifacts/release"]
    }
  },
  "include": [
    "../index.ts",
    "../library.ts"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true
  }
}
