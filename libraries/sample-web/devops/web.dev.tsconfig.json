{
  "compilerOptions": {
    "baseUrl": ".",
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "es2015",
    "noEmitOnError": false,
    "outDir": "../__artifacts/build/app",
    "lib": ["es2015", "dom"],
    "target": "es2015",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noEmitHelpers": true,
    "types": [
      "node",
      "jasmine"
    ],
    "paths": {
      "@sharpangles/platform-global": ["../../platform-global/__artifacts/release"]
    }
  },
  "include": [
    "../index.ts",
    "../src/**/*.ts",
    "../spec/**/*.ts"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true
  }
}
